## This is a Marmousi2 benchmark using externally generated mesh

parameters:

  header:
    ## Header information is used for logging. It is good practice to give your simulations explicit names
    title: Marmousi2 benchmark with external mesh  # name for your simulation
    # A detailed description for your simulation
    description: |
      Material systems : Elastic domain (1)
      Mesh : External mesh from CUBIT
      Sources : Force source (1)
      Boundary conditions : Stacey absorbing on bottom, left and right edges

  simulation-setup:
    ## quadrature setup
    elastic-wave: P_SV
    quadrature:
      quadrature-type: GLL4

    ## Solver setup
    solver:
      time-marching:
        time-scheme:
          type: Newmark
          dt: 5.0e-6
          nstep: 100000

    simulation-mode:
      forward:
        writer:
          seismogram:
            format: "ascii"
            directory: "@CURRENT_BENCHMARK_BUILD_DIR@/OUTPUT_FILES/results"
          # Uncomment the following lines to enable display output if VTK is installed
          # display:
          #   directory: "@CURRENT_BENCHMARK_BUILD_DIR@/OUTPUT_FILES/display"
          #   format: PNG
          #   field: displacement
          #   simulation-field: forward
          #   time-interval: 500

  receivers:
    stations: "@CURRENT_BENCHMARK_BUILD_DIR@/OUTPUT_FILES/STATIONS"
    angle: 0.0
    seismogram-type:
      - displacement
    nstep_between_samples: 1

  ## Runtime setup
  run-setup:
    number-of-processors: 1
    number-of-runs: 1

  ## databases
  databases:
    mesh-database: "@CURRENT_BENCHMARK_BUILD_DIR@/OUTPUT_FILES/database.bin"

  ## sources
  sources: "@CURRENT_BENCHMARK_BUILD_DIR@/sources.yaml"
